@model CoursesViewModel

@{
    Layout = "_Layout";
}

<div class="row">
@if (Model == null) {
    <h3>No data received</h3>
} else if (@Model.Course == null) {
    @if (@Model.Courses != null) {
        <h3>Courses</h3>
        <br />
        <ol>
        @foreach (var course in Model.Courses) {
            var path = "/course/" + @course.CourseId;

            <li><a href=@path>@course.Name</a></li>
        }
        </ol>
    }
} else {
    <h1>@Model.Course.Name</h1>
    <br />
    <h3>CourseId: @Model.Course.CourseId</h3>
    <br />
    <h2>Modules:</h2>
    <ul>
        @foreach (var module in Model.Course.ModuleIds) {
            var path = "/module/" + @module;
            
            <li><a href=@path>@module</a></li>
        }
    </ul>
}
</div>